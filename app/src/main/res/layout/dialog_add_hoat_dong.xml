<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bgr_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Hoạt Động Mới"
        android:background="@drawable/tv_dialog"
        android:gravity="center"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/ed_ten_hoat_dong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="Tên hoạt động"
        android:padding="13dp"
        android:layout_margin="13dp"
        />
    <EditText
        android:id="@+id/ed_mo_ta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="Mô tả"
        android:padding="13dp"
        android:layout_margin="13dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian: "
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Từ: "
            android:textColor="@color/gray"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/ed_from_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Đến: "
            android:textColor="@color/gray"
            />
        <EditText
            android:id="@+id/ed_to_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"

            />
    </LinearLayout>

    <Spinner
        android:id="@+id/sp_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:padding="10dp"
        android:background="@color/white"

        />



    <Button
        android:id="@+id/btn_save"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#29BE38"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
</LinearLayout>