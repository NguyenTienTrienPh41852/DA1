<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F6F1"
    android:layout_margin="8dp"

    >

    <TextView
        android:id="@+id/tv_chon_vi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/search_view"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="20dp"
        >
        <Spinner
            android:id="@+id/sp_chon_thang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_thu_chi_thang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_item_quan_li_vi"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các giao dịch"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv_thu_chi_thang"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_cac_giao_dich_thang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"/>


    <ImageButton
        android:id="@+id/btn_add_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/image_button"
        android:padding="30dp"
        />


</LinearLayout>