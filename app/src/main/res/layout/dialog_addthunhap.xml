
<!-- res/layout/dialog_scrollable.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nội dung của dialog -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                android:background="@color/green"
                android:gravity="center"
                android:text="Thêm Thu Nhập"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/add_tn_sotien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Số tiền"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên giao dịch: "
                    android:textColor="@color/green"
                    android:layout_marginLeft="10dp"
                    android:textSize="23dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/spn_add_tn_tengd"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày:            "
                    android:layout_marginLeft="10dp"
                    android:textSize="23dp"
                    android:textColor="@color/green"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/calendar2"/>
                    <EditText
                        android:id="@+id/add_tn_ngay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn loại ví:            "
                    android:layout_marginLeft="10dp"
                    android:textSize="23dp"
                    android:textColor="@color/green"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/spn_add_tn_loaivi"/>


            </LinearLayout>

            <EditText
                android:id="@+id/add_tn_ghichu"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:hint="Ghi chú"
                android:textSize="20sp"/>
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/green"
                android:textSize="17dp"
                android:id="@+id/btn_tn_add"/>
        </LinearLayout>
        <!-- Thêm các phần tử khác nếu cần -->
    </LinearLayout>
</ScrollView>

