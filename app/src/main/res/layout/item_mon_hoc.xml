<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginStart="6dp"
                android:paddingBottom="6dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_ten_mon_hoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Môn Học"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_ma_mon_hoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Mã Môn Học) - "
                        android:layout_marginStart="3dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_ten_lop_hoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Lớp Học"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm trung bình:"
                        android:textSize="15dp"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:id="@+id/tv_diem_trung_binh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.0"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái:"
                        android:textSize="15dp"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:id="@+id/tv_status_mon_hoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passed"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"
                        />
                </LinearLayout>
            </LinearLayout>
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="280dp"
            android:src="@drawable/img_6"
        />

    </RelativeLayout>
</androidx.cardview.widget.CardView>