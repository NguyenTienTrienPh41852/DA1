<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgr_dialog"
    tools:context=".DangKy">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="216dp"
        android:src="@drawable/calendar" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#29BE38"
        android:textSize="40sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản:"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textColor="@color/green"/>
        <EditText
            android:id="@+id/ed_dk_tentk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/backgroundlogin"
            android:hint="Vui lòng nhập tên tài khoản"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textColor="@color/green"/>
        <EditText
            android:id="@+id/ed_dk_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/backgroundlogin"
            android:hint="Vui lòng nhập Password"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu:"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textColor="@color/green"/>
        <EditText
            android:id="@+id/ed_dk_resetpass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/backgroundlogin"
            android:hint="Vui lòng nhập lại Password"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#29BE38"
            />

    </LinearLayout>
</LinearLayout>