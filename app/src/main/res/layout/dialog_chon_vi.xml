<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các Loại Ví"
            android:background="@drawable/tv_dialog"
            android:gravity="center"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="16dp"
            />

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rc_vi"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginTop="10dp"-->
<!--            />-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_item_quan_li_vi"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp"
                        >
                        <ImageView
                            android:id="@+id/img_icon_vi"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_3"
                            />
                        <TextView
                            android:id="@+id/tv_ten_vi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên ví"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_so_tien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.999.999"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/green"
                        />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_6"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_item_quan_li_vi"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp"
                        >
                        <ImageView
                            android:id="@+id/img_icon_vi"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_3"
                            />
                        <TextView
                            android:id="@+id/tv_ten_vi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên ví"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_so_tien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.999.999"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/green"
                        />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_6"
                />
        </RelativeLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>