<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bgr_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm khoản chi"
        android:background="@drawable/tv_dialog"
        android:gravity="center"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img"
            />
        <EditText
            android:id="@+id/ed_ten_khoan_chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên khoản chi"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục: "
            android:textSize="23dp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/sp_chon_danh_muc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_luu_khoan_chi"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#29BE38"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
</LinearLayout>